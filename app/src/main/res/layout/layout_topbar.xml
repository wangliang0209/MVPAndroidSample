<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="48dp"
              android:background="@color/colorBottomLayoutDefault"
              android:clickable="true"
              android:gravity="center_vertical"
              android:orientation="horizontal"
    >

    <ImageView
        android:id="@+id/topbar_back_iv"
        android:layout_width="48dp"
        android:layout_height="match_parent"
        android:background="@drawable/selector_back_bg"
        android:clickable="true"
        android:onClick="onClick"
        android:scaleType="centerInside"
        android:src="@drawable/selector_back"/>

    <TextView
        android:id="@+id/layout_topbar_title"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:text="图片选择"
        android:textColor="@color/colorLightPrimaryText"
        android:textSize="18sp"
        />

    <Button
        android:id="@+id/topbar_sure_btn"
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:layout_marginRight="16dp"
        android:background="@android:color/holo_green_light"
        android:text="确定"
        android:textColor="@color/colorLightPrimaryText"
        />
</LinearLayout>